<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gc="urn:import:com.orange.groupbuy.web.client.component">
	<ui:style>
		.anchor{
			padding-left:2px;
			padding-right:2px;
		}
	</ui:style>
	<g:LayoutPanel>
			<g:layer width='180px'>
				<gc:GroupBuyNavigationPanel ui:field='myGroupNavigationPanel' />
			</g:layer>
   			<g:layer left='210px' width='750px' >
				<g:LayoutPanel>
					<g:layer left='200px' top='10px' height='20px'  width='200px'>
						<g:Label ui:field="description"></g:Label>
					</g:layer>
					<g:layer left='400px' top='10px' height='40px'  width='200px'>
						<g:VerticalPanel>
						<g:Anchor href="javascript:0" ui:field="rankPriceAsc" styleName="{style.anchor}">按价格从低到高</g:Anchor>
						<g:Anchor href="javascript:0" ui:field="rankPriceDesc" styleName="{style.anchor}">按价格从高到底</g:Anchor>
						</g:VerticalPanel>
					</g:layer>
					<g:layer left='560px' top='10px' height='20px'  width='200px'>
						<gc:PageListWidget ui:field='pageNavigation'>
						</gc:PageListWidget>
					</g:layer>
					<g:layer top='35px' height='100%'>
						<g:FlowPanel ui:field='searchResultPanel' styleName='searchResultPanel'>
						</g:FlowPanel>
					</g:layer>
					<g:layer left='560px' bottom ='10px' height='20px' width='200px'>
						<gc:PageListWidget ui:field='bottomPageNavigation'>
						</gc:PageListWidget>
					</g:layer>
				</g:LayoutPanel>
   			</g:layer>
   </g:LayoutPanel>
</ui:UiBinder>
