<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="login.css"></ui:style>	
	<g:HTMLPanel styleName='{style.loginPanel}'>
		<g:Grid styleName='{style.loginGrid}'>
			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}">用户名:</g:Label>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="userName" styleName="{style.loginin}"></g:TextBox>
				</g:customCell>
			</g:row>

			<g:row>
				<g:customCell>
					<g:Label styleName="{style.label}">密码:</g:Label>
				</g:customCell>
				<g:customCell>
					<g:PasswordTextBox ui:field="password" styleName="{style.loginin}"></g:PasswordTextBox>
				</g:customCell>
			</g:row>

		</g:Grid>
		<g:HTMLPanel styleName='{style.buttonPanel}'>
			<g:Button ui:field="sumbitButton" styleName="{style.submit}">登录</g:Button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<g:Button ui:field="cancelButton" styleName="{style.cancel}">取消</g:Button>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 