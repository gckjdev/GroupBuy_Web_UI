<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		
		.pagetool{
			float: right;
			vertical-align: baseline;
		}
		.item{
			float: right;
			display: inline;
			vertical-align: bottom;
			border: 0;
			padding: 0;
			margin: 0;
		}
	</ui:style>

	<g:HTMLPanel styleName="pagetool">
		<ol>
			<li><g:Anchor styleName='item' ui:field='previousPage' href='javascript:;'>上一页</g:Anchor></li>
	<!-- 		<g:Label ui:field='description' ></g:Label> -->
			<li><span ui:field='description'></span></li>
			<li><g:Anchor styleName='item' ui:field='nextPage' href='javascript:;'>下一页 </g:Anchor></li>			
		</ol>
	</g:HTMLPanel>
<!-- 	<span class="fr"><a href="#"  ui:field='previousPage'>上一页</a> <span ui:field='description'></span> <a href="#" ui:field='nextPage'>下一页</a></span> -->
</ui:UiBinder>

