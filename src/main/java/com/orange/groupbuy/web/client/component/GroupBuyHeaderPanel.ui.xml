<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		style.logo {
			
		}
		
		style.statusDiv {
			
		}
		
		style.linksDiv {
			cursor: pointer;
			cursor: hand;

		}
	</ui:style>
	<g:HTMLPanel>
		<div class='{style.logo}' />

		<div class="{style.statusDiv}">
			<div>
				<b>Welcome back, foo@example.com</b>
			</div>

			<div class='{style.linksDiv}'>
				<g:Anchor href='javascript:;' ui:field='loginLink' >登录</g:Anchor>
				<g:Anchor href='javascript:;' ui:field='signOutLink'>Sign Out</g:Anchor>
				&nbsp;
				<g:Anchor href='javascript:;' ui:field='aboutLink'>About</g:Anchor>
			</div>
		</div>
		<g:ListBox ui:field='citySelect' visibleItemCount='1'/>
	</g:HTMLPanel>
</ui:UiBinder>