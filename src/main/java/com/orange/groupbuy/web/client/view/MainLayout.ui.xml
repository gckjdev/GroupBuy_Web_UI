<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:gc="urn:import:com.orange.groupbuy.web.client.component">

	<g:HTMLPanel styleName='center'>
		<g:LayoutPanel ui:field="mainPanel" >
			<g:layer top='5px' height='130px' width='100%'>
				<gc:GroupBuyHeaderPanel ui:field='headerPanel' />
			</g:layer>
			<g:layer top='130px' bottom="45px">
				<gc:GroupBuyTabHeader ui:field='tabHeader' />
			</g:layer>
			<g:layer bottom='0px' height='45px'>
				<gc:GroupBuyFootPanel ui:field='footPanel' />
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder>